{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
    <h1>Ajouter un produit</h1>

    {{ form_start(formAddProduit, {'attr': {'enctype': 'multipart/form-data'}}) }}
    <div class="formulaire">
        {{ form_row(formAddProduit.nom) }}
        {{ form_row(formAddProduit.description) }}
        {{ form_row(formAddProduit.prix) }}
        {{ form_row(formAddProduit.images) }}
    </div>
      
    {# <h2>Images du produit :</h2>
    <div class="form-group row">
        <div class="col-form-label col-sm-2">&nbsp;</div>
        <div id="image-fields-list" class="col-sm-10 images-collection"
             data-prototype="{{ form_widget(formAddProduit.images.vars.prototype)|e }}"
             data-produit="{{produitId}}"
             data-widget-tags="{{ '<div></div>'|e }}"
             data-widget-counter="{{ formAddProduit.images|length }}">

             {% for imageField in formAddProduit.images %}
             <p>
                    {{ form_errors(imageField) }}
                    {{ form_widget(imageField, {'attr': {'class': 'borders'}}) }}
             </p>
                     {% endfor %}
        </div>
    </div>
    {# <div class="form-group row flex-action">
        <button type="button" 
                class="add-another-collection-widget button"
                data-list-selector="#image-fields-list">Ajouter une nouvelle image</button>
    </div> 
                 
    {% do formAddProduit.images.setRendered %} #}

    {{ form_end(formAddProduit) }}

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

